<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.karbobucksapp.HomeFragment"
        android:label="Inicio"
        tools:layout="@layout/fragment_home"/>

    <fragment
        android:id="@+id/fragmentAutenticacion"
        android:name="com.example.karbobucksapp.fragments.FragmentAutenticacion"
        android:label="Mi Cuenta"
        tools:layout="@layout/fragment_autenticacion"/>

    <fragment
        android:id="@+id/estatusPedidoFragment"
        android:name="com.example.karbobucksapp.fragments.EstatusPedidoFragment"
        android:label="Estado del Pedido"
        tools:layout="@layout/fragment_estatus_pedido">
        
        <action
            android:id="@+id/action_estatusPedido_to_detallesPedido"
            app:destination="@id/detallesPedidoFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right"/>
        
        <action
            android:id="@+id/action_estatusPedido_to_satisfaction"
            app:destination="@id/satisfactionFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="false"/>
    </fragment>

    <fragment
        android:id="@+id/detallesPedidoFragment"
        android:name="com.example.karbobucksapp.fragments.DetallesPedidoFragment"
        android:label="Detalles del Pedido"
        tools:layout="@layout/fragment_detalles_pedido">
        
        <argument
            android:name="order"
            app:argType="com.example.karbobucksapp.models.Pedido"
            app:nullable="true"/>
    </fragment>

    <fragment
        android:id="@+id/satisfactionFragment"
        android:name="com.example.karbobucksapp.SatisfactionFragment"
        android:label="SatisfacciÃ³n"
        tools:layout="@layout/fragment_satisfaction">
        
        <argument
            android:name="orderId"
            app:argType="integer"
            android:defaultValue="0"/>
        
        <argument
            android:name="nombreCliente"
            app:argType="string"
            android:defaultValue=""/>
    </fragment>

</navigation>